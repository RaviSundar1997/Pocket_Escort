<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMIZE YOUR ROUTE"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:fontFamily="sans-serif-condensed-medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:ems="10"

                android:hint="your place"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:paddingRight="50dp" />

            <Button
                android:id="@+id/waypoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search"
                android:textSize="14sp" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/peopleMovement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More people movement" />


        <CheckBox
            android:id="@+id/secured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Scured Area" />

        <CheckBox
            android:id="@+id/highway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avoid Highway" />


    </LinearLayout>
</LinearLayout>